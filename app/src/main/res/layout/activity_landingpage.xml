<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".landingpage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_android_black_24dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="serif"
            android:text="Android Coding Club"
            android:textColor="@color/golden"
            android:textSize="35dp"
            android:textStyle="italic" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            app:boxBackgroundColor="@color/cardview_dark_background"
            app:boxBackgroundMode="filled"
            app:boxStrokeColor="@color/golden"
            app:hintTextColor="@color/golden"
            app:startIconDrawable="@drawable/baseline_person_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                app:hintTextColor="@color/golden" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:startIconDrawable="@drawable/baseline_mail_24"
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/golden"
            app:hintTextColor="@color/golden"
            app:boxBackgroundColor="@color/cardview_dark_background"
            android:layout_marginLeft="25dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/golden"
                android:hint="Enter Mail"
                android:id="@+id/email"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/golden"
            app:hintTextColor="@color/golden"
            app:boxBackgroundColor="@color/cardview_dark_background"
            android:layout_marginLeft="25dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/golden"
                android:hint="Enter userId"
                android:id="@+id/userId"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            app:boxStrokeColor="@color/golden"
            app:hintTextColor="@color/golden"
            app:boxBackgroundColor="@color/cardview_dark_background"
            android:layout_marginLeft="25dp"
            app:helperTextTextColor="@color/golden"
            app:endIconMode="password_toggle"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/golden"
                android:hint="Create Password"
                android:id="@+id/password"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/signupbutton"
            android:layout_marginTop="25dp"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/golden"
            android:layout_marginLeft="25dp"
            android:text="Sign UP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="If already an user then click here to"
            android:textColor="@color/golden"
            android:textSize="15dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Log in"
            android:textStyle="bold"
            android:textColor="@color/golden"
            android:textSize="25dp"/>
    </LinearLayout>

</LinearLayout>